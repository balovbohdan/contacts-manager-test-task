{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": ".",
    "outDir": "dist",

    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",

    "strict": true,
    "allowJs": true,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    "types": ["jest", "enzyme", "node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],

    "paths": {
      "@root/*": ["./*"],
      "@css/*": ["css/*"],
      "@lib/*": ["lib/*"],
      "@img/*": ["../assets/img/*"],
      "@fonts/*": ["../assets/fonts/*"],
      "@components/*": ["components/*"],
      "@storehouse": ["storehouse"],
      "@storehouse/*": ["storehouse/*"],
      "@routes": ["components/routes"],
      "@routes/*": ["components/routes/*"]
    }
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}